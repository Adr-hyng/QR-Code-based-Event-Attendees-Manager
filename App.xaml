<Application x:Class="QEAMApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QEAMApp"
             xmlns:viewModel="clr-namespace:QEAMApp.MVVM.ViewModel"
             xmlns:view="clr-namespace:QEAMApp.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/TextBoxTheme.xaml"/>
                <ResourceDictionary Source="Theme/IconButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/ModernScrollViewerTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="JetBrainsMono">pack://application:,,,/QEAMApp;component/Fonts/#JetBrains Mono</FontFamily>

            <DataTemplate DataType="{x:Type viewModel:PersonalViewModel}">
                <view:PersonalView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:StatusViewModel}">
                <view:StatusView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SnackViewModel}">
                <view:SnackView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
