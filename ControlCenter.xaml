<Window
    x:Class="QEAMApp.ControlCenter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QEAMApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:QEAMApp.MVVM.ViewModel"
    xmlns:views="clr-namespace:QEAMApp.MVVM.View"
    Title="ControlCenter"
    Width="800"
    Height="450"
    ResizeMode="CanMinimize"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Window.DataContext>
        <views:ControlCenterView />
    </Window.DataContext>

    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <ContentControl Grid.Row="1" Content="{Binding ControlCenterViewModel}" />
    </Grid>
</Window>
