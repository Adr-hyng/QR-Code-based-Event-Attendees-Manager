<UserControl
    x:Class="QEAMApp.MVVM.View.IdleScreenView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QEAMApp.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="550"
    d:DesignWidth="1066"
    Loaded="UserControl_Loaded"
    MouseLeftButtonDown="Grid_MouseLeftButtonDown"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <Grid Background="White" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <TextBox
                x:Name="QRCodeTextBox"
                Width="450"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{x:Null}"
                BorderBrush="#02ABADB3"
                Cursor="None"
                Foreground="Black"
                IsReadOnly="{Binding IsReadOnly}"
                Opacity="{Binding Opacity, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource ModernTextBox}"
                Text="{Binding UniqueIdentifier, UpdateSourceTrigger=Default}"
                TextWrapping="Wrap"
                Visibility="Visible">
                <TextBox.InputBindings>
                    <KeyBinding
                        Key="Enter"
                        Command="{Binding ScanningCommand}"
                        CommandParameter="{Binding Text, ElementName=QRCodeTextBox}" />
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <TextBlock
            x:Name="WelcomePromptText"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="50"
            FontWeight="Light"
            Foreground="Black"
            Text="Scan ID to Get Started!"
            TextAlignment="Center">
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                AutoReverse="True"
                                RepeatBehavior="Forever"
                                Storyboard.TargetProperty="Opacity"
                                From="1"
                                To="0"
                                Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="1"
                Width="372"
                Height="372"
                Margin="10,10,10,10">
                <Border.Background>
                    <ImageBrush ImageSource="/QEAMApp;component/Images/barcode_scanner.png" Stretch="UniformToFill" />
                </Border.Background>
            </Border>

            <Canvas>
                <Border
                    x:Name="welcomeRibbon"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Canvas.Left="934"
                    Canvas.Top="10"
                    Width="500"
                    Height="75"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Border.Background>
                        <ImageBrush ImageSource="/QEAMApp;component/Images/Welcome Ribbon.png" Stretch="Uniform" />
                    </Border.Background>
                    <Viewbox Width="230" Margin="125,0,125,0">
                        <TextBlock
                            FontFamily="Poppins"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Morning Attendance"
                            TextWrapping="Wrap" />
                    </Viewbox>
                </Border>
            </Canvas>
            <Canvas>
                <Rectangle
                    x:Name="ScannerRect"
                    Grid.Column="1"
                    Canvas.Left="354"
                    Canvas.Top="243"
                    Width="358"
                    Height="25"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Fill="#FF1C1B1F" />
            </Canvas>
        </Grid>
    </Grid>
</UserControl>
