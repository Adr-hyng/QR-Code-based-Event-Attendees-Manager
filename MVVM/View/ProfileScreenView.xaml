<UserControl
    x:Class="QEAMApp.MVVM.View.ProfileScreenView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="clr-namespace:QEAMApp.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:QEAMApp.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1066"
    Height="550"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Core:CustomConverter x:Key="CustomConverter" />
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="UserDetails"
            Grid.Row="0"
            Grid.Column="0">
            <Border
                Margin="20,30,20,10"
                Background="#665B5B5B"
                CornerRadius="50" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="120" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="20" />
                    <!--  Spacing  -->
                    <RowDefinition Height="37" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="20" />
                    <!--  Spacing  -->
                    <RowDefinition Height="37" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="20" />
                    <!--  Spacing  -->
                    <RowDefinition Height="37" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="20" />
                    <!--  Spacing  -->
                    <RowDefinition Height="37" />
                    <RowDefinition Height="15" />
                    <!--  Spacing  -->

                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="1"
                    Margin="113,20,113,20"
                    RenderTransformOrigin="0.497,0.676">
                    <Border.Background>
                        <ImageBrush ImageSource="/QEAMApp;component/Images/profile_icon.png" Stretch="Uniform" />
                    </Border.Background>
                </Border>

                <Viewbox Grid.Row="2">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="/Fonts/#Poppins"
                        FontWeight="Bold"
                        Text="{Binding FirstName, StringFormat='Hello, {0}!'}" />
                </Viewbox>

                <Viewbox
                    Grid.Row="4"
                    Width="300"
                    Margin="21,0,21,0">
                    <TextBlock
                        MaxWidth="500"
                        HorizontalAlignment="Center"
                        FontFamily="/Fonts/#Poppins"
                        FontWeight="Bold"
                        Text="{Binding Name}"
                        TextWrapping="Wrap" />
                </Viewbox>

                <TextBlock
                    Grid.Row="5"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    FontFamily="/Fonts/#Poppins"
                    FontWeight="Bold"
                    Foreground="#CC000000"
                    Text="Name"
                    TextWrapping="Wrap" />

                <Viewbox
                    Grid.Row="7"
                    Width="300"
                    Margin="21,0,21,0">
                    <TextBlock
                        MaxWidth="500"
                        HorizontalAlignment="Center"
                        FontFamily="/Fonts/#Poppins"
                        FontWeight="Bold"
                        Text="{Binding Membership}"
                        TextWrapping="Wrap" />
                </Viewbox>

                <TextBlock
                    Grid.Row="8"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    FontFamily="/Fonts/#Poppins"
                    FontWeight="Bold"
                    Foreground="#CC000000"
                    Text="Membership"
                    TextWrapping="Wrap" />

                <Viewbox
                    Grid.Row="10"
                    Width="300"
                    Margin="21,0,21,0">
                    <TextBlock
                        MaxWidth="500"
                        HorizontalAlignment="Center"
                        FontFamily="/Fonts/#Poppins"
                        FontWeight="Bold"
                        Text="{Binding Position}"
                        TextWrapping="Wrap" />
                </Viewbox>

                <TextBlock
                    Grid.Row="11"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    FontFamily="/Fonts/#Poppins"
                    FontWeight="Bold"
                    Foreground="#CC000000"
                    Text="Position"
                    TextWrapping="Wrap" />

                <Viewbox
                    Grid.Row="13"
                    Width="300"
                    Margin="21,0,21,0">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="/Fonts/#Poppins"
                        FontWeight="Bold"
                        Text="{Binding Institution}"
                        TextWrapping="Wrap" />
                </Viewbox>

                <TextBlock
                    Grid.Row="14"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    FontFamily="/Fonts/#Poppins"
                    FontWeight="Bold"
                    Foreground="#CC000000"
                    Text="Organization / School"
                    TextWrapping="Wrap" />
            </Grid>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">
            <Border
                x:Name="MonitoringTable"
                Margin="20,30,20,10"
                Background="#665B5B5B"
                CornerRadius="40" />

            <TextBlock
                Margin="136,57,136,417"
                FontFamily="Poppins"
                FontSize="38"
                Text="Attendance &amp; Snacks"
                TextAlignment="Center" />



            <Button
                Height="50"
                Margin="583,39,29,431"
                Panel.ZIndex="2"
                BorderBrush="Transparent"
                Command="{Binding GoBackCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="/Images/go_back_button.png" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>



            <Border Margin="50,119,50,32">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/Table.png" />
                </Border.Background>
            </Border>

            <Border
                Width="55"
                Height="55"
                Margin="81,165,502,292">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/am_snack_icon.png" />
                </Border.Background>
            </Border>
            <Border
                Width="55"
                Height="55"
                Margin="95,234,516,231">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/lunch_snack_icon.png" />
                </Border.Background>
            </Border>
            <Border
                Width="55"
                Height="55"
                Margin="95,298,516,166">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/pm_snack_icon.png" />
                </Border.Background>
            </Border>
            <Border
                Width="55"
                Height="55"
                Margin="95,364,516,101">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/check-in_icon.png" />
                </Border.Background>
            </Border>
            <Border
                Width="55"
                Height="55"
                Margin="87,428,524,37">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/check-out_icon.png" />
                </Border.Background>
            </Border>

            <CheckBox
                x:Name="AMD1"
                Width="60"
                Height="60"
                Margin="238,166,368,294"
                BorderBrush="#00707070"
                IsChecked="False"
                PreviewMouseDown="RadioButton_PreviewMouseDown"
                Style="{StaticResource {x:Type ToggleButton}}" />

            <CheckBox
                x:Name="LD1"
                Width="60"
                Height="60"
                Margin="238,232,368,228"
                BorderBrush="#00707070"
                IsChecked="False"
                PreviewMouseDown="RadioButton_PreviewMouseDown"
                Style="{StaticResource {x:Type ToggleButton}}" />



            <CheckBox
                x:Name="PMD1"
                Width="60"
                Height="60"
                Margin="238,296,368,164"
                BorderBrush="#00707070"
                Command="{Binding ToggleCommand}"
                IsChecked="{Binding RadioButtons[PMD1].IsChecked}"
                Opacity="{Binding RadioButtons[PMD1].Opacity}"
                Style="{StaticResource {x:Type ToggleButton}}">
                <CheckBox.CommandParameter>
                    <MultiBinding Converter="{StaticResource CustomConverter}">
                        <Binding ElementName="PMD1" Path="IsChecked" />
                        <Binding ElementName="PMD1" Path="Name" />
                    </MultiBinding>
                </CheckBox.CommandParameter>
            </CheckBox>

            <CheckBox
