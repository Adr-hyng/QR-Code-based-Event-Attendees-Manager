                </CheckBox.CommandParameter>
            </CheckBox>

            <CheckBox
                x:Name="LD3"
                Width="60"
                Height="60"
                Margin="518,232,88,228"
                BorderBrush="#00707070"
                Command="{Binding ToggleCommand}"
                IsChecked="{Binding RadioButtons[LD3].IsChecked}"
                Opacity="{Binding RadioButtons[LD3].Opacity}"
