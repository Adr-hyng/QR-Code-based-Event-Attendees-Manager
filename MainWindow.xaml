<Window x:Class="QEAMApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QEAMApp"
        xmlns:viewModel="clr-namespace:QEAMApp.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="450" Width="600"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                <GradientStop Color="#1c4942" Offset="0.0"/>
                <GradientStop Color="#0e1c1c" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                    <RowDefinition Height="75"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="#1c4942">
                    <TextBlock Text="Image Header"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="22"
                               Margin="20, 0, 0, 0"/>
                </Border>

                <Button Content="X"
                        Background="DarkGray"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="30"
                        Height="25"
                        Grid.Row="0"
                        Grid.Column="1"
                        Click="CloseButton_Click" RenderTransformOrigin="0.4,0.067"/>

                <Border Grid.Row="2"
                        Background="#1c4942">
                    <TextBlock Text="Image Footer"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="22"
                               Margin="20, 0, 0, 0"/>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1"
                            Margin="20"
                            CornerRadius="10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0, 0" EndPoint="0, 1">
                                <GradientStop Color="#1c4942" Offset="0.0"/>
                                <GradientStop Color="#23d5bb" Offset="2.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Margin" Value="8"/>
                                </Style>
                            </StackPanel.Resources>
                            <StackPanel Orientation="Horizontal"
                                        Background="#267367">
                                <Border Width="105"
                                        Height="30"
                                        CornerRadius="7">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 0">
                                            <GradientStop Color="#134039" Offset="0.0"/>
                                            <GradientStop Color="#0e1c1c" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <RadioButton Content="Personal"
                                                 Foreground="White"
                                                 FontSize="20"
                                                 Style="{StaticResource MenuButtonTheme}"
                                                 GroupName="CategoriesButton"
                                                 IsChecked="True"
                                                 Command="{Binding PersonalViewCommand}"/>
                                </Border>

                                <Border Width="105"
                                        Height="30"
                                        CornerRadius="7">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 0">
                                            <GradientStop Color="#134039" Offset="0.0"/>
                                            <GradientStop Color="#0e1c1c" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <RadioButton Content="Status"
                                                 Foreground="White"
                                                 FontSize="20"
                                                 Style="{StaticResource MenuButtonTheme}"
                                                 GroupName="CategoriesButton"
                                                 IsChecked="False"
                                                 Command="{Binding StatusViewCommand}"/>
                                </Border>

                                <Border Width="105"
                                        Height="30"
                                        CornerRadius="7">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 0">
                                            <GradientStop Color="#134039" Offset="0.0"/>
                                            <GradientStop Color="#0e1c1c" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <RadioButton Content="Snacks"
                                                 Foreground="White"
                                                 FontSize="20"
                                                 Style="{StaticResource MenuButtonTheme}"
                                                 GroupName="CategoriesButton"
                                                 IsChecked="False"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Background="#37a695">
                                <Grid Height="185">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="145"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>


                                    <Border Grid.Row="0"
                                            Margin="15, 10, 15, 15"
                                            Background="#267367"
                                            CornerRadius="10">
                                        <ContentControl Content="{Binding CurrentView}">

                                        </ContentControl>
                                    </Border>

                                    <Border Grid.Row="1"
                                            Background="#267367"
                                            Margin="0"
                                            CornerRadius="10"
                                            Width="330">
                                        <TextBox Width="250"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 Grid.Column="1"
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </Border>
                                </Grid>
                            </StackPanel>
                            
                        </StackPanel>
                        
                    </Border>

                </Grid>
                <Button Style="{StaticResource IconButtonTheme}"
                        Width="30"
                        Height="25"
                        Grid.Row="1"
                        RenderTransformOrigin="0.4,0.067" 
                        Margin="417,219,153,31"/>
            </Grid>
        </Grid>
    </Border>
</Window>
