<Window x:Class="QEAMApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QEAMApp"
        xmlns:viewModel="clr-namespace:QEAMApp.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="800" Width="1279"
        WindowStyle="None"
        Background="Transparent"
        PreviewKeyDown="FocusTextBoxOnKeyDown"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Margin="1,10,-1,10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                <GradientStop Color="#1c4942" Offset="0.0"/>
                <GradientStop Color="#0e1c1c" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid>
                <Grid.Background>
                    <ImageBrush/>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                    <RowDefinition Height="75"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Margin="-3,0,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="/Images/header.png"/>
                    </Border.Background>
                </Border>

                <Button Content="X"
                        Background="DarkGray"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="30"
                        Height="25"
                        Grid.Row="0"
                        Grid.Column="1"
                        Click="CloseButton_Click" RenderTransformOrigin="0.4,0.067"/>

                <Border Grid.Row="2">
                    <Border.Background>
                        <ImageBrush ImageSource="/Images/footer.png"/>
                    </Border.Background>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="332*"/>
                        <RowDefinition Height="273*"/>
                    </Grid.RowDefinitions>
                    <Grid.Background>
                        <ImageBrush ImageSource="/Images/bg.png"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="MainGrid" Grid.Column="1" Grid.RowSpan="2"/>
                    <Border BorderThickness="1" Grid.Column="1" Margin="0,44,0,229" Grid.RowSpan="2">
                        <Border.Background>
                            <ImageBrush ImageSource="/Images/base.png" Stretch="Uniform"/>
                        </Border.Background>
                        <Canvas>
                            <Rectangle x:Name="ScannerRect" HorizontalAlignment="Center" Height="8" Stroke="White" VerticalAlignment="Top" Width="291" Fill="White" Canvas.Left="393" Canvas.Top="10" Visibility="Hidden"/>
                        </Canvas>
                    </Border>
                    <TextBox x:Name="QRCodeTextBox" 
                             Grid.Column="1"
                             HorizontalAlignment="Center" 
                             Margin="0,200,0,0" 
                             TextWrapping="Wrap" 
                             VerticalAlignment="Top" 
                             Width="552" 
                             Height="42" 
                             FontSize="6" 
                             KeyDown="OnKeyDownHandler"
                             TabIndex="1" Visibility="Visible" Background="{x:Null}" Foreground="#00000000" BorderBrush="#02ABADB3" Opacity="0" Grid.Row="1"
                             />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
